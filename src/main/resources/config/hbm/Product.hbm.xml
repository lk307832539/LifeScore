<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entity.Product" table="product" schema="lifescore">
        <id name="productId">
            <column name="product_id" sql-type="int(11)"/>
        </id>
        <property name="productTypeId">
            <column name="product_type_id" sql-type="int(255)" not-null="true"/>
        </property>
        <property name="productName">
            <column name="product_name" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="productScore">
            <column name="product_score" sql-type="int(255)" not-null="true"/>
        </property>
        <property name="productDescription">
            <column name="product_description" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="exchangeType">
            <column name="exchange_type" sql-type="tinyint(4)" not-null="true"/>
        </property>
        <property name="userId">
            <column name="user_id" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="productImg">
            <column name="product_img" sql-type="varchar(255)" not-null="true"/>
        </property>
        <many-to-one name="userByUserId" class="com.entity.User">
            <column name="user_id" not-null="true"/>
        </many-to-one>
        <set name="exchangeItemsByProductId" inverse="true">
            <key>
                <column name="exchange_product_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.entity.ExchangeItem"/>
        </set>
    </class>
</hibernate-mapping>