<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entity.Task" table="task" schema="lifescore">
        <id name="taskId">
            <column name="task_id" sql-type="int(11)"/>
        </id>
        <property name="taskUserId">
            <column name="task_user_id" sql-type="int(11)"/>
        </property>
        <property name="taskTypeId">
            <column name="task_type_id" sql-type="int(11)"/>
        </property>
        <property name="taskCreateTime">
            <column name="task_create_time" sql-type="datetime" not-null="true"/>
        </property>
        <property name="taskStartTime">
            <column name="task_start_time" sql-type="datetime" not-null="true"/>
        </property>
        <property name="taskEndTime">
            <column name="task_end_time" sql-type="datetime" not-null="true"/>
        </property>
        <property name="taskFinishTime">
            <column name="task_finish_time" sql-type="datetime" not-null="true"/>
        </property>
        <property name="taskTitle">
            <column name="task_title" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="taskStatus">
            <column name="task_status" sql-type="tinyint(4)" not-null="true"/>
        </property>
        <property name="taskDescription">
            <column name="task_description" sql-type="text" not-null="true"/>
        </property>
        <property name="taskPriority">
            <column name="task_priority" sql-type="tinyint(4)" not-null="true"/>
        </property>
        <property name="taskIsRepeat">
            <column name="task_is_repeat" sql-type="tinyint(4)" not-null="true"/>
        </property>
        <property name="taskRepeatDate">
            <column name="task_repeat_date" sql-type="int(11)" not-null="true"/>
        </property>
        <many-to-one name="userByTaskUserId" class="com.entity.User">
            <column name="task_user_id"/>
        </many-to-one>
        <many-to-one name="taskTypeByTaskTypeId" class="com.entity.TaskType">
            <column name="task_type_id"/>
        </many-to-one>
        <set name="taskItemsByTaskId" inverse="true">
            <key>
                <column name="task_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.entity.TaskItem"/>
        </set>
    </class>
</hibernate-mapping>